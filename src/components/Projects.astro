---
import HTMLicon from "../icons/HTMLicon.astro"
import Tailwind from "../icons/Tailwind.astro"

const TAGS = {
HTML:{
    name: "HTML",
    class: "bg-orange text-white",
    icon: HTMLicon,
},
TAILWIND:{
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
}
}
const PROJECTS =[
    {
        title: 'Mi portfolio',
        description: 'Sitio web donde muestro mi experiencia y mis proyectos creados',
        link: '#',
        github: '#',
        image: '/projects/portfolio.webp',
        tags:[TAGS.HTML, TAGS.TAILWIND],
    },
]
---

{
    PROJECTS.map(({image, title, description, tags}) => (
        <article>
            <h3 class="text-2xl font-semibold text-fuchsia-300 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) =>(
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4"/>
                            {tag.name}
                        </span>
                       
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}>
        </article>
    ))
}
